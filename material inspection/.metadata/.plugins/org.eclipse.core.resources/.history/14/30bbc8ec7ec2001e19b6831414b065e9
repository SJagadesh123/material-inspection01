package com.zettamine.mi.controller;

import org.apache.catalina.User;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import com.zettamine.mi.entities.Users;
import com.zettamine.mi.service.UserService;

@Controller
public class UserController {

	@Autowired
	private UserService userService;

	@GetMapping("/user-form")
	public String showUserForm(RedirectAttributes redirectAttributes) {
		redirectAttributes.addFlashAttribute("user", new Users());
		return "user-form";
	}

	@PostMapping("/process-user")
	public String processUser(@ModelAttribute("user") Users user, RedirectAttributes redirectAttributes) {

		String user = (String) redirectAttributes.getAttribute("user");
		if (userService.validateUser(user)) {
			return "home-page";
		}

		return "user-form";
	}
}
